# Pi-Guard Environment Configuration Template
# Copy this file to .env and fill in your values:
#   cp .env.template .env

# =============================================================================
# REQUIRED: WireGuard VPN Configuration
# =============================================================================

# Your DuckDNS subdomain (e.g., myhomelab.duckdns.org)
SERVERURL=your-subdomain.duckdns.org

# Your DuckDNS token (get from duckdns.org)
DUCKDNS_TOKEN=

# Your Raspberry Pi's LAN IP address (used for PEERDNS)
PI_LAN_IP=192.168.1.10

# =============================================================================
# REQUIRED: Pi-hole Configuration
# =============================================================================

# Pi-hole admin password (CHANGE THIS!)
PIHOLE_PASSWORD=CHANGE_ME_PLEASE

# =============================================================================
# OPTIONAL: AI Security Tools API Keys
# =============================================================================

# OpenAI API key for AI-powered security tools
OPENAI_API_KEY=

# Anthropic API key for Claude-powered features
ANTHROPIC_API_KEY=

# =============================================================================
# OPTIONAL: Additional Configuration
# =============================================================================

# Timezone (default: Etc/UTC)
TZ=Etc/UTC

# User/Group IDs for container permissions (default: 1000)
PUID=1000
PGID=1000
